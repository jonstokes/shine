<%= render partial: "shine/shared/heading", locals: { title: "Posts", subtitle: "All" } %>
<%= render "shine/shared/notice" %>


<div class="row">
  <div class="col-lg-12">
      <div class="table-responsive">
          <table class="table table-hover table-striped">
              <thead>
                <tr>
                  <th>Title</th>
                  <th>Author</th>
                  <th>Categories</th>
                  <th>Date</th>
                  <th colspan=2></th>
                </tr>
              </thead>
              <tbody>
                <% @posts.each do |post| %>
                  <tr>
                    <td><%= link_to post.title, post_path(post) %></td>
                    <td><%= post.authors.first.name %></td>
                    <td><%= post.categories.first.title %></td>
                    <td><%= post.date %></td>
                    <td><%= link_to 'Edit', edit_post_path(post) %></td>
                    <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                  </tr>
                <% end %>
              </tbody>
          </table>
      </div>
  </div>
</div>
<!-- /.row -->

<hr />

<%= link_to 'New Post', new_post_path %>
