<%= render partial: "shine/shared/heading", locals: { title: "Posts", subtitle: @subtitle } %>
<%= render "shine/shared/notice" %>

<div class="row">
  <div class="col-lg-12">
    <div class="table-responsive">
      <table class="table table-hover table-striped">
        <thead>
          <tr>
            <th>Title</th>
            <th>User</th>
            <th>Categories</th>
            <th>Date</th>
            <th colspan=2></th>
          </tr>
        </thead>
        <tbody>
          <% @posts.each do |post| %>
            <tr <%= row_class(post) %>>
              <td><%= link_to post.title, "/#{post.slug}" %></td>
              <td><%= post.users.first.name %></td>
              <td><%= post.categories.first.title %></td>
              <td><%= post.updated_at %></td>
              <td>
                <%= link_to edit_post_path(post) do %>
                  <%= icon('edit') %>
                <% end %>
              </td>
              <td>
                <%= link_to(post, method: :delete, data: { confirm: 'Are you sure?' }) do %>
                  <%= icon('remove') %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<!-- /.row -->

<hr />

<%= link_to 'New Post', new_post_path, class: "btn btn-default" %>
