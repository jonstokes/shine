<%= render partial: "shine/shared/heading", locals: { title: "Categories", subtitle: "All" } %>
<%= render "shine/shared/notice" %>

<div class="row">
  <div class="col-lg-12">
    <div class="table-responsive">
      <table class="table table-hover table-striped">
        <thead>
          <tr>
            <th>Title</th>
            <th>Short Description</th>
            <th>Icon</th>
            <th>Created</th>
            <th colspan=2></th>
          </tr>
        </thead>
        <tbody>
          <% @categories.each do |category| %>
            <tr>
              <td><%= link_to category.title, "/#{category}" %></td>
              <td><%= category.short_description %></td>
              <td><span class="shine-icon-category"><%= image_tag(category.icon.url) %></span></td>
              <td><%= category.created_at %></td>
              <td>
                <%= link_to edit_category_path(category) do %>
                  <%= icon('edit') %>
                <% end %>
              </td>
              <td>
                <%= link_to(category, method: :delete, data: { confirm: 'Are you sure?' }) do %>
                  <%= icon('remove') %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<!-- /.row -->

<hr />

<%= link_to 'New category', new_category_path, class: "btn btn-default" %>
